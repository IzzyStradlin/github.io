<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:rfilop="https://github.com/IzzyStradlin/rfilop/blob/main/RFILOP.owl#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:dolce="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#">

    <owl:Ontology rdf:about="http://www.example.org/ontology/rfilop#"/>

    <!-- Involved Party Class Definition -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#InvolvedParty">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdfs:subClassOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#non-physical-endurant"/>
        <rdfs:label>InvolvedParty</rdfs:label>
        <rdfs:comment>An involved party in the logistics process (e.g., shipper, carrier).</rdfs:comment>
    </rdf:Description>

    <!-- InvPartyNumber Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#InvPartyNumber">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Unique identifier of the involved party.</rdfs:comment>
    </rdf:Description>

    <!-- InvPartyRole Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#InvPartyRole">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Role of the involved party (e.g., Shipper, Carrier).</rdfs:comment>
    </rdf:Description>

    <!-- Name Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Name">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Name of the company or individual.</rdfs:comment>
    </rdf:Description>

    <!-- ContactPerson Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#ContactPerson">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Name of the contact person for the involved party.</rdfs:comment>
    </rdf:Description>

    <!-- PhoneNumber Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#PhoneNumber">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Phone number for communication.</rdfs:comment>
    </rdf:Description>

    <!-- Email Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Email">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Email address of the involved party.</rdfs:comment>
    </rdf:Description>

    <!-- Relation between Involved Party and Address -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasAddress">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#Address"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Links an Involved Party to their Address.</rdfs:comment>
    </rdf:Description>

    <!-- Address Class Definition -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Address">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdfs:subClassOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#perdurant"/>
        <rdfs:label>Address</rdfs:label>
        <rdfs:comment>An address associated with an Involved Party.</rdfs:comment>
    </rdf:Description>

    <!-- Address Properties -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Address">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#q-location-of"/>
        <rdfs:comment>Defines the address of the involved party.</rdfs:comment>
    </rdf:Description>

    <!-- City Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#City">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Address"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#q-location-of"/>
        <rdfs:comment>City of the address.</rdfs:comment>
    </rdf:Description>

    <!-- Country Property -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Country">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Address"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#q-location-of"/>
        <rdfs:comment>Country of the address.</rdfs:comment>
    </rdf:Description>

</rdf:RDF>
