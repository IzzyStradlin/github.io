<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xmlns:rfilop="https://github.com/IzzyStradlin/rfilop/blob/main/RFILOP.owl#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:dolce="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#">
         
    <owl:Ontology rdf:about="http://www.example.org/ontology/rfilop#"/>

    <!-- Trip class definition -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#Trip">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdfs:subClassOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#perdurant"/>
        <rdfs:label>Trip</rdfs:label>
        <rdfs:comment>A Trip represents a transport operation that consists of multiple LegOrders and involves assets and parties.</rdfs:comment>
    </rdf:Description>

    <!-- TripDetail class definition -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TripDetail">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#Class"/>
        <rdfs:subClassOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#physical-endurant"/>
        <rdfs:label>TripDetail</rdfs:label>
        <rdfs:comment>TripDetail captures the physical properties of a Trip, such as weight, volume, and ship unit count.</rdfs:comment>
    </rdf:Description>

    <!-- Temporal properties of Trip -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#StartDate">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#temporal-quality"/>
        <rdfs:comment>The start date and time of the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#EndDate">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#temporal-quality"/>
        <rdfs:comment>The end date and time of the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TransitTime">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#duration"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#temporal-quality"/>
        <rdfs:comment>Total transit time of the trip.</rdfs:comment>
    </rdf:Description>

    <!-- Physical properties of TripDetail -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TotalWeight">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#TripDetail"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#double"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#/physical-quality"/>
        <rdfs:comment>Total weight of the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TotalVolume">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#TripDetail"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#double"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#physical-quality"/>
        <rdfs:comment>Total volume of the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TotalShipUnitCount">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#TripDetail"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#int"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#physical-quality"/>
        <rdfs:comment>Total number of ship units in the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TotalSops">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#TripDetail"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#int"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#physical-quality"/>
        <rdfs:comment>Total number of stops made during the Trip.</rdfs:comment>
    </rdf:Description>

    <!-- TripDetail abstract quality -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TripNumber">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>A unique identifier for the trip.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TripType">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>Type of Trip based on operational needs (e.g., long haul, short haul).</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#TripMode">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#DatatypeProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#abstract-quality"/>
        <rdfs:comment>The mode of transport used for the Trip (e.g., road, sea, air).</rdfs:comment>
    </rdf:Description>

    <!-- Relationship between Trip and TripDetail -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasTripDetail">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#TripDetail"/>
        <owl:cardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#int">1</owl:cardinality>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Each Trip must be associated with exactly one TripDetail.</rdfs:comment>
    </rdf:Description>

     <!-- Relationships -->
    <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasLegOrder">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#LegOrder"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Links a Trip to one or more LegOrders.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasAsset">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#Asset"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Associates a Trip with one or more Assets used in the transport.</rdfs:comment>
    </rdf:Description>

    <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasInvolvedParty">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#InvolvedParty"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Defines the involvement of various parties in a Trip.</rdfs:comment>
    </rdf:Description>

       <rdf:Description rdf:about="http://example.org/ontology/rfilop#hasStop">
        <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#ObjectProperty"/>
        <rdfs:domain rdf:resource="http://example.org/ontology/rfilop#Trip"/>
        <rdfs:range rdf:resource="http://example.org/ontology/rfilop#Stop"/>
        <rdfs:subPropertyOf rdf:resource="http://www.loa-cnr.it/ontologies/DOLCE-Lite.owl#part"/>
        <rdfs:comment>Links a Trip to one or more Stops.</rdfs:comment>
    </rdf:Description>

</rdf:RDF>
